<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="600.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo12.bibliotecaunisa.controller.ControllerRicercaLibro">
   <children>
      <HBox alignment="CENTER" minHeight="40.0">
         <children>
            <Label text="Cerca Libro">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" minHeight="100.0" prefHeight="100.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Cerca per:   Codice / Titolo / Autore" />
                  <TextField fx:id="cercaLibro" prefWidth="250.0" promptText="cerca" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <TableView fx:id="tabellaLibri">
               <columns>
                  <TableColumn fx:id="colonnaCodice" maxWidth="110.0" minWidth="110.0" prefWidth="110.0" text="ISBN" />
                  <TableColumn fx:id="colonnaTitolo" minWidth="100.0" prefWidth="200.0" text="Titolo" />
                  <TableColumn fx:id="colonnaAutori" minWidth="100.0" prefWidth="200.0" text="Autori" />
                  <TableColumn fx:id="colonnaAnno" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="Anno" />
                  <TableColumn fx:id="colonnaCopieDisponibili" maxWidth="110.0" minWidth="110.0" prefWidth="110.0" text="Copie Disponibili" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#conferma" prefWidth="100.0" text="Conferma" />
            <Button mnemonicParsing="false" onAction="#annulla" prefWidth="100.0" text="Annulla" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
         <children>
            <Label fx:id="labelAvvisoRicerca" textFill="RED" />
         </children>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
