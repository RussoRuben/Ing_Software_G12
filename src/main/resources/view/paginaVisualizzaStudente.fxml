<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="600.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo12.bibliotecaunisa.controller.ControllerVisualizzaStudente">
    <children>
        <HBox alignment="TOP_CENTER" maxHeight="-Infinity">
            <children>
                <Label text="Informazioni Studente">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox prefWidth="100.0" spacing="34.0">
                    <children>
                        <Label text="Matricola:" />
                        <Label text="Nome:" />
                        <Label text="Cognome:" />
                        <Label text="Email:" />
                    </children>
                    <padding>
                        <Insets top="6.0" />
                    </padding>
                </VBox>
                <VBox prefWidth="200.0" spacing="20.0">
                    <children>
                        <TextField fx:id="campoMatricola" disable="true" editable="false" />
                        <TextField fx:id="campoNome" alignment="TOP_LEFT" disable="true" />
                        <TextField fx:id="campoCognome" disable="true" />
                        <TextField fx:id="campoEmail" disable="true" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <Label text="Libri in prestito">
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </Label>
                        <TableView fx:id="tabellaPrestitiStudente" prefHeight="150.0" prefWidth="500.0">
                            <columns>
                                <TableColumn fx:id="colonnaCodicePrestito" maxWidth="80.0" minWidth="80.0" text="Codice" />
                                <TableColumn fx:id="colonnaDataFinePrestito" maxWidth="140.0" minWidth="140.0" prefWidth="140.0" text="Data Fine Prestito" />
                                <TableColumn fx:id="colonnaLibroPrestito" editable="false" minWidth="150.0" prefWidth="300.0" text="Libro" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="bottoneModifica" mnemonicParsing="false" onAction="#modificaCampi" prefWidth="100.0" text="Modifica" />
                <Button mnemonicParsing="false" onAction="#indietro" prefWidth="100.0" text="Indietro" />
                <Button mnemonicParsing="false" onAction="#elimina" prefWidth="100.0" text="Elimina" />
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
    </children>
</VBox>
