<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="600.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo12.bibliotecaunisa.controller.ControllerPrestito">
    <children>
        <HBox alignment="TOP_CENTER" maxHeight="-Infinity" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Nuovo prestito">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Label>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" spacing="20.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="20.0">
               <children>
                  <Button fx:id="bottoneRicercaStudente" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#avviaRicercaStudente" prefWidth="130.0" text="Cerca Studente" />
                  <Button fx:id="bottoneRicercaLibro" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#avviaRicercaLibro" prefWidth="130.0" text="Cerca  Libro" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="28.0">
               <children>
                  <Label fx:id="labelSelezioneStudente" text="selezione..." />
                  <Label fx:id="labelSelezioneLibro" text="selezione..." />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <VBox spacing="34.0">
               <children>
                  <Label text="Inizio prestito:" />
                  <Label text="Durata (giorni):" />
                  <Label text="Fine prestito:" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="150.0" spacing="20.0">
               <children>
                  <DatePicker fx:id="pickerInizioPrestito" />
                  <TextField fx:id="campoDurataPrestito" />
                  <DatePicker fx:id="pickerFinePrestito" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#conferma" prefWidth="100.0" text="Conferma" />
                <Button mnemonicParsing="false" onAction="#annulla" prefWidth="100.0" text="Annulla" />
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
      <Label fx:id="labelAvvisoInput" textFill="RED" />
    </children>
</VBox>
